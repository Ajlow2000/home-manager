[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
    side-by-side = true

[pull]
   rebase = true 

[merge]
    conflictstyle = diff3

[difftool]
    prompt = true

[diff]
    tool = nvimdiff

[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[alias]
    plog = "log --color --graph --pretty=format:'%Cred%h%Creset %Cgreen(%ci) %C(bold blue)<%an> -%C(yellow)%d%Creset %s %Creset' --abbrev-commit";
 
